# 机器人配置文件
# 复制此文件为 .env 并填入你的机器人token

# Discord机器人配置
# 在 https://discord.com/developers/applications 创建应用并获取token
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# KOOK机器人配置
# 在 https://developer.kookapp.cn/ 创建应用并获取token
KOOK_BOT_TOKEN=your_kook_bot_token_here

# Discord到KOOK频道转发规则配置
# 格式: FORWARD_RULES=discord_channel_id1:kook_channel_id1,discord_channel_id2:kook_channel_id2
# 示例: FORWARD_RULES=1234567890:9876543210,1111111111:2222222222
# 请将下面的频道ID替换为实际的频道ID
FORWARD_RULES=1234567890:9876543210

# 是否转发机器人消息 (true/false)
FORWARD_BOT_MESSAGES=true

# 消息前缀 (可选)
MESSAGE_PREFIX=[Discord]

# 定期清理配置
CLEANUP_INTERVAL=24  # 清理间隔，单位为小时
CLEANUP_MAX_AGE=72   # 文件最大保留时间，单位为小时

# 翻译功能配置
TRANSLATION_ENABLED=true
TRANSLATION_SERVICE=google  # 可选值: libre, tencent, google, baidu, youdao, deepl, bing, ali
TRANSLATION_SOURCE_LANGUAGE=auto
TRANSLATION_TARGET_LANGUAGE=zh-CN

# LibreTranslate API配置
LIBRE_TRANSLATION_API_URL=https://libretranslate.com/translate
LIBRE_TRANSLATION_API_KEY=

# 腾讯云翻译API配置
TENCENT_SECRET_ID=
TENCENT_SECRET_KEY=

# Google翻译API配置
GOOGLE_TRANSLATION_API_KEY=

# 百度翻译API配置
BAIDU_APP_ID=
BAIDU_APP_KEY=

# 有道翻译API配置
YOUDAO_APP_KEY=
YOUDAO_APP_SECRET=

# DeepL翻译API配置
DEEPL_API_KEY=

# 必应翻译API配置
BING_API_KEY=

# 阿里云翻译API配置
ALI_ACCESS_KEY_ID=
ALI_ACCESS_KEY_SECRET=


DEEPL_API_URL=https://api-free.deepl.com/v2/translate  # 免费版API地址

# 必应翻译API配置
BING_SUBSCRIPTION_KEY=
BING_REGION=global

# 阿里云翻译API配置
ALI_ACCESS_KEY_ID=
ALI_ACCESS_KEY_SECRET=